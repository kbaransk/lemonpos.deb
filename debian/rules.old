#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

package = lemon-fast
docdir = debian/tmp/usr/share/doc/$(package)

CC = gcc
CFLAGS = -g -Wall
INSTALL_PROGRAM = install

COMPILATIONDIR = builddir

ifeq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

build:
	$(checkdir)
	[ -d $(COMPILATIONDIR) ] || mkdir $(COMPILATIONDIR)
	cd $(COMPILATIONDIR) && cmake .. -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
	cd $(COMPILATIONDIR) && $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)"
	touch build

clean:
	$(checkdir)
	rm -f build
	[ -d $(COMPILATIONDIR) ] || mkdir $(COMPILATIONDIR)
	cd $(COMPILATIONDIR)
	cd $(COMPILATIONDIR) && cmake .. -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
	[ ! -f $(COMPILATIONDIR)/Makefile ] || cd $(COMPILATIONDIR) && $(MAKE) clean
	rm -fr $(COMPILATIONDIR)
	#rm -r *.cmake Makefile CMakeFiles CMakeCache.txt
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars

binary-indep: checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package. If there were any they would be
# made here.

binary-arch: checkroot build
	$(checkdir)
	rm -rf debian/tmp
	mkdir -p debian/tmp
	#install -d debian/tmp/DEBIAN $(docdir)
	#install -m 755 debian/postinst debian/prerm debian/tmp/DEBIAN
	#$(MAKE) INSTALL_PROGRAM="$(INSTALL_PROGRAM)" \
	# prefix=$$(pwd)/debian/tmp/usr install
	cd $(COMPILATIONDIR) && $(MAKE) DESTDIR=$(CURDIR)/debian/tmp $(INSTALL_PROGRAM)
	#cp -a debian/copyright $(docdir)
	#cp -a debian/changelog $(docdir)/changelog.Debian
	#cp -a ChangeLog $(docdir)/changelog
	#cd $(docdir) && gzip -9 changelog changelog.Debian
	#dpkg-shlibdeps debian/tmp/usr/bin/hello
	dpkg-gencontrol -isp
	chown -R root:root debian/tmp
	chmod -R u+w,go=rX debian/tmp
	dpkg --build debian/tmp ..

define checkdir
	#test -f CMakeLists.txt -a -f debian/rules
	test -f /etc/passwd
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test $$(id -u) = 0

.PHONY: binary binary-arch binary-indep clean checkroot
